# Application Configuration
APP_NAME=Gen Confi Backend
APP_VERSION=1.0.0
DEBUG=True

# Database Configuration
# Format: postgresql://user:password@host:port/database
# Local PostgreSQL connection
DATABASE_URL=postgresql://postgres:root@localhost:5432/gen_confi

# API Configuration
API_V1_PREFIX=/api/v1

# Security Configuration
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=super-secret-key-change-this-min-32-chars
ALGORITHM=HS256
# Token expiration (in minutes)
# For mobile apps, use longer expiration (e.g., 43200 = 30 days)
# For web apps, use shorter expiration (e.g., 30 = 30 minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# CORS Configuration (comma-separated list)
# In DEBUG mode, all origins are allowed for easier development
# For production, specify exact origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://10.0.2.2:8000

# Groomify ML Service Configuration
# URL of the groomify_ml microservice
GROOMIFY_ML_API_URL=http://localhost:8001
# Timeout for groomify_ml API requests (in seconds)
GROOMIFY_ML_TIMEOUT=120
# Number of retries for failed groomify_ml API calls
GROOMIFY_ML_RETRY_COUNT=2

